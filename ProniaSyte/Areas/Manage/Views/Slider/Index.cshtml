@model List<Slider>
@{
    ViewData["Title"] = "Slider";
}

<div class="container mt-5">

    <div class="create">
        <a class=" btn btn-success" asp-controller="slider" asp-action="create">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Image</th>
                <th scope="col">Title</th>
                <th scope="col">DiscountPercent</th>
                <th scope="col">Description</th>
                <th scope="col">Edit/Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>
                        <img style="width:100px; height:130px" src="~/assets/images/slider/inner-img/@item.Image" />
                    </td>
                    <td>@item.Title</td>
                    <td>@item.DiscountPercent</td>
                    <td>@item.Description</td>
                    <td>
                        <a class="btn btn-outline-primary" asp-controller="slider" asp-action="edit" asp-route-id="@item.Id" >edit</a>
                        <a class="btn btn-outline-danger" asp-controller="slider" asp-action="delete" asp-route-id="@item.Id">delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>
